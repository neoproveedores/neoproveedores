{% extends 'base.html.twig' %}

{% block content %}
<div class="ui primary header">
    <div class="ui container">
        <h2>Actividad</h2>
        <p>Lo que ha ocurrido desde la última vez que pasaste por aquí</p>
    </div>
</div>

{% if pagination.items|length > 0 %}
    <div class="ui timeline content async container">
        {% include 'timeline/events.html.twig' %}
    </div>
{% else %}
    <div class="ui container">
        <div class="ui hidden divider"></div>
        <h2 class="ui center aligned icon header">
            <i class="info icon"></i>
            <div class="content">
                Todavía no hay actividad
            </div>
        </h2>
        <div class="ui hidden divider"></div>
    </div>
{% endif %}
{% endblock %}
